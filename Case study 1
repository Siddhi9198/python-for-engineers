disvalue=0 
if totalcost>300:
  disvalue=(20/100)*totalcost
elif totalcost>200:
  disvalue=(10/100)*totalcost

bill=totalcost-disvalue
gstbill=((18/100)*bill)+bill 
gst=((18/100)*bill)
